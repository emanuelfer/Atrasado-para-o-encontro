<fable>
    <page background="quarto.jpg" soundtrack="song.wav">
        <agent text="Johnny está preso está preso em seu quarto!" font-size="18" x="20" y="450" width="400" on-trigger="cortada" color="black">
            <cortada text="O caminhos está livre!"/>
        </agent>
        <agent text="Ajude-o a econtrar a chave e desbloquear a saída para encontrar sua amada!" x="20" y="400" width="300" on-trigger="cortada" color="black">
            <cortada y="410" text="toma essa mostro! Agora Toque na placa para prosseguir na jornada"/>
        </agent>
        <agent img="box.png" x="10" y="0" width="75" height="75"/>
        <agent img="box.png" x="90" y="0" width="75" height="75"/>
        <agent img="key.png" x="70" y="75" width="40" height="35" draggable="true" on-drop="chestopen" on-zone="after-chestopen" on-trigger="after-chestopen">
            <after-chestopen y="-200"/>
        </agent>
        <agent img="IceBox.png" x="50" y="75" width="75" height="75" draggable="true"/>
        <agent img="johny.png" x="100" y="90" width="250" height="300"/>
        <agent img="Sign_2.png" x="385" y="0" width="70" height="70" on-touch="_NEXT_PAGE"/>
        <agent img="chest.png" x="370" y="0" width="100" height="100" drop-zone="chestopen">
            <chestopen y="-200"/>
        </agent>
    </page>
    <page background="torre-eiffel.png" soundtrack="song3.wav">
        <agent text="Agora Johnny está feliz por estar com sua amada!" font-size="19" x="20" y="450" width="400" color="white"/>
        <agent img="johny.png" x="150" y="40" width="250" height="300"/>
        <agent img="princesa.png" x="30" y="40" width="250" height="300"/>
    </page>
</fable>